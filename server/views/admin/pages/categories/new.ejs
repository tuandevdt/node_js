<%- include('../../layout/header') %>

    <main class="main">
        <div class="container mt-4">
            <form action="/admin/categories/add-category" method="POST">
                <h1 class="mb-4">Thêm mới danh mục</h1>
                
                <div class="form-group">
                    <label for="categoryName">Nhập tên danh mục</label>
                    <input type="text" class="form-control" id="categoryName" name="name" placeholder="Nhập tên danh mục" required>
                </div>
    
                <div class="form-group">
                    <label for="categoryDescription">Nhập mô tả</label>
                    <input type="text" class="form-control" id="categoryDescription" name="description" placeholder="Nhập mô tả" required>
                </div>
    
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            </form>
        </div>
    </main>
  <%- include('../../layout/footer') %>