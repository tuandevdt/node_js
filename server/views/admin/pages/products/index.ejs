<%- include('../../layout/header') %>

    <main class="main">
        <div class="categories container">
            <h1>Quản lý sản phẩm</h1>
            <div class="d-flex justify-content-between">
                <div class="first-search">
                    <a href="/admin/products/new" class="btn btn-primary">Thêm sản phẩm mới</a>
                </div>
            </div>

            <table class="table table-striped table-light">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">STT</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col" class="th" colspan="2" style="text-align: center;">More</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((item , index) => {%>
                        <tr>
                            <th scope="row">
                                <%= index + 1 %>
                            </th>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.price %>
                            </td>
                            <td><img style="width: 100px;" src="/<%= item.image %>" alt=""></td>
                            <td class="more">
                                <a href="/admin/products/edit/<%= item.id %>" class="btn btn-dark">Update </a>
                            </td>
                            <td class="more">
                                <button class="btn-delete-category btn btn-dark" value="" onclick="confirmDelete('<%= item.id %>')">Delete</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
                <div class="form-delete none-active">
                    <form id="form-submit-delete" action="" method="POST">
                        <div class="form-group">
                            <span>Xác nhận xóa?</span>
                            <input id="id-update" type="hidden" name="id-xoa" value="">
                            <div class="confirm">
                                <a id="confirmDelete" href="">Xóa</a>
                                <div class="none">Hủy</div>
                            </div>
                        </div>
                    </form>
                </div>
            </table>

        </div>
    </main>
    <script src="/js/admin.js"></script>
    <%- include('../../layout/footer') %>