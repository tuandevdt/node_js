<%- include('../../layout/header') %>

    <main class="main">
        <div class="container mt-4">
            <form action="/admin/products/add-product" method="POST" enctype="multipart/form-data">
                <h1 class="mb-4">Thêm mới sản phẩm mới</h1>
                
                <div class="form-group">
                    <label for="categoryName">Nhập tên sản phẩm</label>
                    <input type="text" class="form-control" id="categoryName" name="name" placeholder="Nhập tên sản phẩm" required>
                </div>
                <div class="form-group">
                    <label for="categoryName">Nhập giá sản phẩm</label>
                    <input type="number" class="form-control" id="categoryName" name="price" placeholder="Nhập giá sản phẩm" required>
                </div>
                <div class="form-group">
                    <label for="categoryDescription">Nhập mô tả</label>
                    <input type="text" class="form-control" id="categoryDescription" name="description" placeholder="Nhập mô tả" required>
                </div>
                <div class="form-group">
                    <label for="">Chọn ảnh sản phẩm</label>
                    <input type="file" class="form-control" name="image">
                </div>
                <div class="form-group">
                    <label for="">Chọn danh mục</label>
                    <select class="form-control" name="categoryid" id="">
                        <% categoryids.forEach(item => {%>
                        <option value="<%= item.id %>"><%= item.name %></option>
                        <% }) %>
                    </select>
                </div>
    
                <button type="submit" class="btn btn-primary">Thêm mới</button>
            </form>
        </div>
    </main>
  <%- include('../../layout/footer') %>